<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_notas_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/Fondo"
    tools:context="com.example.gs.NotasDetails"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/caldroid_black"
            android:text="@string/detailcurso"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="sans-serif-smallcaps"
    android:id="@+id/curso_details"
    android:layout_weight="1"
    android:textColor="@color/caldroid_black"
    android:text="curso"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textColor="@color/caldroid_black"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/detailactiv"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/comentario_details"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_weight="1"
        android:textColor="@color/caldroid_black"
        android:text="Comentario"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textColor="@color/caldroid_black"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/detailnota"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_details"
        android:layout_weight="1"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/caldroid_black"
        android:text="actividad"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textColor="@color/caldroid_black"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/detailprof"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/professor_details"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_weight="1"
        android:textColor="@color/caldroid_black"
        android:text="teacher"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/caldroid_black"
            android:text="@string/detailcoment"/>
    <TextView
        android:textColor="@color/caldroid_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nota_details"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_weight="1"
        android:text="nota"/>
    </LinearLayout>
</LinearLayout>
